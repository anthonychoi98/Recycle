
<LoginWindow>:
    transition: "FadeTransition"
    space_x:self.size[0]/3

    canvas.before:
        Color:
            rgba: (.7, 1, .6, .5)
        Rectangle:
            size: self.size
            pos: self.pos

    GridLayout:
        size_hint_y:None
        height: 80
        orientation: "vertical"
        spacing: 20
        cols: 1
        size:root.width, root.height
        padding:80

        Label:
            height:30

        Label:
            text: "Recycl-App"
            font_size: 80
            color: 0, 1, .2, 1
            bold:True
            font_name: 'oj'

        Label:
            height:50
        Label:
            id:login_message
            height: 40
            text: "Log in, or Create an Account"
            font_size: 25
            size: self.size


        TextInput:
            id: username
            hint_text: "Email"
            multiline:False

        TextInput:
            hint_text: "Password"
            id: pwd
            multiline:False
            password:True

        Button:
            text:"Sign In"
            background_normal: ''
            background_color: 0, 1, 0, .6
            on_release:
                app.my_firebase.sign_in(username.text, pwd.text)


        Button:
            text:"Don't Have an Account"
            background_normal: ''
            background_color: 0, 1, 0, .6
            on_release:
                app.root.current = "signup"
                root.manager.transition.direction= "left"

        Button:
            text:"Check Out Recycling Site"
            on_release:
                print("switching")
                app.root.current="home_screen"
