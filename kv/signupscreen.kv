
<SignUpWindow>:
    space_x:self.size[0]/3

    canvas.before:
        Color:
            rgba: (0, .46, .2, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    GridLayout:
        size_hint_y:None
        height: 80
        orientation: "vertical"
        spacing: 20
        cols: 1
        size:root.width, root.height
        padding:80

        Label:
            size_hint_y:None
            height:25

        Label:
            text: "Recycl-App"
            font_size: 80
            color: 0, 1, .2, 1
            bold:True
            font_name: 'oj'

        Image:
            source: "images/option-change.png"
            size_hint: .75, .75

        Label:
            id: signin_message
            color: (1,0,0,.7)
            multiline:True
            font_size: 25
            size_hint_y: None
            text_size: self.size
            valign: 'center'
            halign:'center'

        TextInput:
            width:100
            id: new_username
            hint_text: "Enter email"
            multiline:False

        TextInput:
            hint_text: "Input a password"
            id: new_pwd
            multiline:False
            password:True

        Button:
            height: 100
            font_size: 35
            font_name:'gb'
            text:"Sign Up!"
            background_normal: ''
            background_color: 0, 1, 0, .6
            #markup:True
            on_release:
                app.my_firebase.sign_up(new_username.text, new_pwd.text)

        Button:
            height: 100
            font_size: 35
            font_name:'gb'
            text:"I actually do have an account!"
            background_normal: ''
            background_color: 0, 1, 0, .6
            on_release:
                app.root.current = "login_screen"
                app.root.transition = NoTransition()

        Button:
            font_name:'gb'
            font_size: 35
            text:"Check Out Recycling Site"
            on_release:
                app.root.transition = NoTransition()
                app.root.current = "home_screen"

        Label:
            size_hint_y:None
            height:10
