<EntryWindow>:
    canvas.before:
        Color:
            rgba: (0, .46, .2, 1)
        Rectangle:
            size: self.size
            pos: self.pos


    GridLayout:
        cols: 1
        padding: 40
        spacing: 40
        Label:
            size_hint_y:None
            height:10
        Label:
            text:"Please Enter Number of Bottles"
            font_name:'gb'
            font_size:40
        Image:
            source: "images/option-change.png"
            size_hint: 1, 1
        Label:
            text:
        TextInput:
            id:small_input
            hint_text:"Number of small bottles"
            multiline: False
        Button:
            text: "Submit"
            font_name:'gb'
            font_size:40
            on_release:
                app.smallCount(small_input.text)

        TextInput:
            id:big_input
            hint_text:"Number of big bottles"
            multiline: False

        Button:
            text: "Submit"
            font_name:'gb'
            font_size:40
            on_release:
                app.bigCount(big_input.text)

        Button:
            text: "Cancel"
            font_name:'gb'
            font_size:40
            on_release:
                app.root.transition = NoTransition()
                app.root.current = "soul_screen"


        Label:
