<Misc>:
    space_x:self.size[0]/3

    canvas.before:
        Color:
            rgba: (.7, 1, .6, .5)
        Rectangle:
            size: self.size
            pos: self.pos

    GridLayout:
        size_hint_y:None
        height: 80
        orientation: "vertical"
        spacing: 20
        cols: 1
        size:root.width, root.height
        padding:80
        Button:
        #show total recycled, show num of big/small bottles...
            text: "See Your Details"
            on_release:
                app.root.current="details_screen"
        Button:
            text:"Undo"
            on_release:
                app.root.current="undo_screen"
        Button:
            text:"Reset Bin"
            on_release:
                app.check_popup("ARE YOU SURE?","")

        Button:
            id:other
            text:"Go Back"
            on_release:
                app.root.current = "soul_screen"

        Button:
            text:"Log Out"
            on_release:
                app.sign_out()
