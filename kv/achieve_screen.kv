<AchieveWindow>:
    space_x:self.size[0]/3

    canvas.before:
        Color:
            rgba: (0, .46, .2, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    GridLayout:
        size_hint_y:None
        height: 80
        orientation: "vertical"
        spacing: 15
        cols: 1
        size:root.width, root.height
        padding:75

        Label:
            text:"Status Achievements"
            size_hint: 1, .1
            font_name:'gb'
            font_size:50
        Image:
            source: "images/option-change.png"
            size_hint: .1, .1

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            Label:
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding: 10, 10
                font_name:'gb'
                font_size: 40
                text:'Ranks require a certain amount\n' +'of wealth accumulated via\n' + 'recycling bottles:\n' + '\n' + 'Horseman: 0-10$\n' + 'Lancer: 10-20$\n' + 'Gallant: 20-40$\n' + 'Keeper: 40-60$\n' + 'Protector: 60-80$\n' + 'Defender: 80-100$\n'+ 'Warder: 100-140$\n' + 'Guardian: 140-200$\n' + 'Chevaliar: 200-300$\n' + 'Justiciar: 300-500$\n' + 'Paladin: 500$'

        Button:
            size_hint: .1, .13
            text: "Go Back"
            font_name:'gb'
            font_size:40
            on_release:
                app.root.transition = NoTransition()
                app.root.current = 'misc_screen'
