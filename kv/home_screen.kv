<HomeWindow>:
    canvas.before:
        Color:
            rgba: (.7, 1, .6, .5)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            Label:
                id:recycle_label
                text: 'initialized..'
                font_size: (self.height)/1.5
                size_hint: None, None
    BoxLayout:
        Label:
            id:nickname
            pos_hint: {'x': .8, 'y': .8}
            halign:'right'
            text:"nickname"
            font_size: (self.height)/2
            size_hint: None,None
    BoxLayout:
        Label:
            id:status
            pos_hint: {'x': .8, 'y': .7}
            halign:'right'
            text:"status"
            font_size: (self.height)/2
            size_hint: None,None

    BoxLayout:
        pos_hint: {"top": 1, "left": 1}
        size_hint: .1, .1
        ImageButton:
            source:"image0.jpg"
            on_release:
                app.sign_out()

    GridLayout:
        rows: 2
        cols: 2
        spacing:25
        size_hint_x:.8
        pos_hint: {"top": .6, "center_x": .5,}
        size_hint_y: None
        height: self.minimum_height
        row_default_height: '125dp'
        ImageButton:
            source:"glassbottle.png"
            on_release:
                app.tinCanCount()
                print("pressed 1")
        ImageButton:
            source:"glassbottle.png"
            on_release:
                app.glassBottleCount()
                print("pressed 2")
        ImageButton:
            source:"glassbottle.png"
            on_release:
                print("pressed 3")
        ImageButton:
            source:"glassbottle.png"
            on_release:
                print("pressed 4")
