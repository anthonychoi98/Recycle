
<LoginWindow>:
    space_x:self.size[0]/3

    canvas.before:
        Color:
            rgba: (0, .46, .2, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    GridLayout:
        size_hint_y:None
        height: 80
        orientation: "vertical"
        spacing: 20
        cols: 1
        size:root.width, root.height
        padding:80

        Label:
            size_hint_y:None
            height:25

        Label:
            text: "Recycl-App"
            font_size: 80
            color: 0, 1, .2, 1
            bold:True
            font_name: 'oj'

        Image:
            source: "images/option-change.png"
            size_hint: .75,.75
        Label:
            id:login_message
            height: 40
            text: "Log in, or Create an Account"
            font_size: 25
            size: self.size


        TextInput:
            id: username
            hint_text: "Email"
            multiline:False

        TextInput:
            hint_text: "Password"
            id: pwd
            multiline:False
            password:True

        Button:
            font_name:'gb'
            font_size: 35
            text:"Sign In"
            background_normal: ''
            background_color: 0, 1, 0, .6
            on_release:
                app.my_firebase.sign_in(username.text, pwd.text)


        Button:
            font_name:'gb'
            font_size: 35
            text:"Don't Have an Account"
            background_normal: ''
            background_color: 0, 1, 0, .6
            on_release:
                app.root.transition = NoTransition()
                app.root.current = "signup"

        Button:
            font_name:'gb'
            font_size: 35
            text:"Check Out Recycling Site"
            on_release:
                app.root.transition = NoTransition()
                app.opensite()
        Label:
            size_hint_y:None
            height:10
