#:import NoTransition kivy.uix.screenmanager.NoTransition

WindowManager:

    LoginWindow:
        name:"login_screen"
        id:login_screen
    SignUpWindow:
        name:"signup"
        id:signup
    NameWindow:
        name:"name_screen"
        id:name_screen
    Misc:
        name:"misc_screen"
        id:misc_screen
    SoulWindow:
        name:"soul_screen"
        id:soul_screen
    EntryWindow:
        name:"entry_screen"
        id:entry_screen
    UndoWindow:
        name:"undo_screen"
        id:undo_screen
    DetailsWindow:
        name:"details_screen"
        id:details_screen
    HowToWindow:
        name:"howto_screen"
        id: howto_screen


#the popup when status changes
<P1>:
    Label:
        id:label
        text:"Status Updated!"
        size_hint: .6, .2
        pos_hint: {"x":0.2, "top":1}

    Button:
        text: "See Your Achievements"
        size_hint: .8, .2
        pos_hint: {"x":0.1, "y":0.1}
        on_release:
            print("change screen to achievements")

#the popup for checking if they want to reset current bin
<P2>:
    Button:
        text: "Yes"
        size_hint: .8, .2
        pos_hint: {"x":0.1, "y":0.55}
        on_release:
            app.resetBin()
            app.root.current="soul_screen"
    Button:
        text: "Cancel"
        size_hint: .8, .2
        pos_hint: {"x":0.1, "y":0.25}
        on_release:
            app.root.current="soul_screen"
