<UndoWindow>:
    canvas.before:
        Color:
            rgba: (0, .46, .2, 1)
        Rectangle:
            size: self.size
            pos: self.pos


    GridLayout:
        cols: 1
        padding: 40
        spacing: 40

        Label:

        Label:
            font_name:'gb'
            font_size:40
            text:"Enter number of bottles to undo"
        Label:
            id:errormsg
            color: (1,0,0,.7)
            font_name:'gb'
            font_size:40
            text:
        Label:
            text:
        TextInput:
            id:small_input
            hint_text:"Number of small bottles"
            multiline: False
        Button:
            text: "Submit"
            font_name:'gb'
            font_size:40
            on_release:
                app.subSmallCount(small_input.text)
                #app.root.current = "soul_screen"

        TextInput:
            id:big_input
            hint_text:"Number of big bottles"
            multiline: False

        Button:
            text: "Submit"
            font_name:'gb'
            font_size:40
            on_release:
                app.subBigCount(big_input.text)
                #app.root.current = "soul_screen"

        Button:
            text: "Cancel"
            font_name:'gb'
            font_size:40
            on_release:
                app.root.current = "soul_screen"


        Label:
