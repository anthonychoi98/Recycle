<SoulWindow>:
    FloatLayout:
        canvas.before:
            Color:
                #rgba: (.7, 1, .6, .5)
                rgba: (1, 1, .9, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            pos_hint: {"top": 1, "x": 0}
            size_hint: 1, .1
            canvas.before:
                Color:
                    rgba: (0, .46, .2, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows:1
            cols:2
            Label:
                text: "Recycl-App"
                font_size: 60
                color: 0, 1, .2, 1
                bold:True
                font_name: 'oj'
                pos_hint: {"top": .5, "x": 0}
                size_hint: 1, .1
            ImageButton:
                source: 'images/menu.png'
                id: img
                pos_hint: {"top": .85, "x": 0}
                size_hint: .7, .7
                on_press:
                    print('pressing')
                    img.source = 'images/option-change.png'
                    #root.command()
                    #pos_hint: {"top": .85, "x": 0}
                    #size_hint: .75, .75
                on_release:
                    img.source = 'images/menu.png'
                    app.root.current = "misc_screen"

        BoxLayout:
            orientation:'vertical'
            pos_hint: {"top": .875, "x": 0}
            size_hint: 1, .14
            rows:2
            cols:1

            Label:
                id:recycle_label
                color: 0, .3, .2, 1
                text: "hello yung blood"
                font_name: 'gb'
                text_size: self.size
                font_size: 60
                pos_hint: {"top": 0, "x": .37}
                size_hint: 1, 1
            Label:
                id:status
                text: "heres ur score yung blood"
                font_name: 'gb'
                color: 0, .3, .2, 1
                text_size: self.size
                font_size: 50
                pos_hint: {"top":0 , "x": .38}
                size_hint: 1, 1


        BoxLayout:
            pos_hint: {"top": .7, "x": 0}
            size_hint: 1, .35
            rows:1
            cols:2
            spacing:15
            padding:15
            ImageButton:
                #padding:10
                id: sb
                source:"images/smallb.gif"
                on_press:
                    sb.source = "images/option-change.png"
                on_release:
                    app.smallCount(1)
                    sb.source ="images/smallb.gif"
            ImageButton:
                #padding:10
                id:bb
                source:"images/bigb.gif"
                on_press:
                    bb.source = "images/option-change.png"
                on_release:
                    app.bigCount(1)
                    bb.source = "images/bigb.gif"

        BoxLayout:
            pos_hint: {"top": .32, "x": 0}
            size_hint: 1, .125
            padding:20
            valign:'bottom'
            rows:1
            cols:2
            Button:
                background_normal: ''
                background_color: 0, .46, .2, 1
                text: "Enter a specific amount!"
                font_name: 'gb'
                font_size:40
                on_release:
                    app.root.current = "entry_screen"
                    print("enter plz")
