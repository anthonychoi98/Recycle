<SoulWindow>:
    FloatLayout:
        canvas.before:
            Color:
                #rgba: (.7, 1, .6, .5)
                rgba: (1, 1, .9, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            pos_hint: {"top": 1, "x": 0}
            size_hint: 1, .1
            canvas.before:
                Color:
                    rgba: (0, .46, .2, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows:1
            cols:2
            Label:
                text: "Recycl-App"
                font_size: 60
                color: 0, 1, .2, 1
                bold:True
                font_name: 'oj'
                pos_hint: {"top": .5, "x": 0}
                size_hint: 1, .1
            ImageButton:
                source:"image0.jpg"
                on_release:
                    print("clicked")
                    app.root.current = "misc_screen"
                pos_hint: {"top": .9, "center_x": 1}
                size_hint: .75, .75

        BoxLayout:
            orientation:'vertical'
            pos_hint: {"top": .875, "x": 0}
            size_hint: 1, .14
            rows:2
            cols:1

            Label:
                id:recycle_label
                color: 0,0,0,1
                text: "hello yung blood"
                font_name: 'gb'
                text_size: self.size
                font_size: 60
                pos_hint: {"top": 0, "x": .36}
                size_hint: 1, 1
            Label:
                id:status
                text: "heres ur score yung blood"
                font_name: 'gb'
                color: 0,0,0,1
                text_size: self.size
                font_size: 50
                pos_hint: {"top":0 , "x": .38}
                size_hint: 1, 1


        BoxLayout:
            pos_hint: {"top": .7, "x": 0}
            size_hint: 1, .35
            rows:1
            cols:2
            spacing:15
            padding:15
            ImageButton:
                #padding:10
                source:"smallb.gif"
                on_release:
                    app.smallCount(1)
                    print("pressed 1")
            ImageButton:
                #padding:10
                source:"bigb.gif"
                on_release:
                    app.bigCount(1)
                    print("pressed 2")

        BoxLayout:
            pos_hint: {"top": .35, "x": 0}
            size_hint: 1, .125
            padding:20
            valign:'bottom'
            rows:1
            cols:2
            Button:
                text: "Enter a specific amount!"
                font_name: 'gb'
                font_size:40
                on_release:
                    app.root.current = "entry_screen"
                    print("enter plz")
